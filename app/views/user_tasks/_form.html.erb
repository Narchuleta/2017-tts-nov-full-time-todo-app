<%= simple_form_for(@user_task, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, placeholder: 'Make groceries' %>
    <%= f.input :due, as: :string, placeholder: 'Today' %>
  </div>

  <div class="form-actions pull-left">
    <%= f.button :submit %>
  </div>

<% end %>
<button id="close-form" class="btn btn-default">Nevermind</button>

